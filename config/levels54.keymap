#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/pointing.h>

/ {
    combos {
        compatible = "zmk,combos";

        sqoute {
            bindings = <&kp SINGLE_QUOTE>;
            key-positions = <15 20>;
        };

        dqoute {
            bindings = <&kp DOUBLE_QUOTES>;
            key-positions = <16 19>;
        };

        kminus {
            bindings = <&kp MINUS>;
            key-positions = <43 44>;
        };

        kunder {
            bindings = <&kp UNDER>;
            key-positions = <44 45>;
        };

        ktab {
            bindings = <&kp TAB>;
            key-positions = <14 21>;
        };

        kcaps {
            bindings = <&caps_word>;
            key-positions = <40 43>;
        };

        kskinny {
            bindings = <&skinnyarrow>;
            key-positions = <28 31>;
        };

        kfat {
            bindings = <&fatarrow>;
            key-positions = <28 31 32>;
        };

        kpipe {
            bindings = <&pipeopr>;
            key-positions = <29 30>;
        };

        kvimsave {
            bindings = <&vimsave>;
            key-positions = <50 14>;
        };
    };

    macros {
        vimsave: vimsave {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp ESCAPE &kp COLON &kp W &kp RET>;
            label = "VIMSAVE";
        };

        skinnyarrow: skinnyarrow {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp MINUS &kp GREATER_THAN>;
            label = "SKINNYARROW";
        };

        fatarrow: fatarrow {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp EQUAL &kp GREATER_THAN>;
            label = "FATARROW";
        };

        pipeopr: pipeopr {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp PIPE &kp GREATER_THAN>;
            label = "PIPEOPR";
        };

        bt_profile1: bt_profile1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&out OUT_BLE &bt BT_SEL 0>;
            label = "BT_PROFILE1";
        };

        bt_profile2: bt_profile2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&out OUT_BLE &bt BT_SEL 1>;
            label = "BT_PROFILE2";
        };

        bt_profile3: bt_profile3 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&out OUT_BLE &bt BT_SEL 2>;
            label = "BT_PROFILE3";
        };
    };

    behaviors {
        hml: hml {
            compatible = "zmk,behavior-hold-tap";
            label = "HML";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <195>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            flavor = "balanced";
            hold-trigger-key-positions = <6 7 8 9 10 11 18 19 20 21 22 23 30 31 32 33 34 35 42 43 44 45 46 47 51 52 53 50 49 48>;
            hold-trigger-on-release;
        };

        hmr: hmr {
            compatible = "zmk,behavior-hold-tap";
            label = "HMR";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <195>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            flavor = "balanced";
            hold-trigger-key-positions = <0 1 5 12 13 14 15 16 17 24 25 26 27 28 29 36 37 38 39 40 41 48 49 50 4 3 15 2 51 52 53>;
            hold-trigger-on-release;
        };

        mod_tap: mod_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "MOD_TAP";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <190>;
            flavor = "tap-preferred";
            quick-tap-ms = <150>;
            require-prior-idle-ms = <125>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base {
            display-name = "Base";
            bindings = <
&kp ESCAPE      &kp N1  &kp N2  &kp N3        &kp N4  &kp N5           &kp N6     &kp N7     &kp N8        &kp N9   &kp N0         &kp EQUAL
&kp GRAVE       &kp Q   &kp W   &kp E         &kp R   &kp T            &kp Y      &kp U      &kp I         &kp O    &kp P          &kp MINUS
&kp TAB         &kp A   &kp S   &kp D         &kp F   &kp G            &kp H      &kp J      &kp K         &kp L    &kp SEMICOLON  &kp SQT
&kp LEFT_SHIFT  &kp Z   &kp X   &kp C         &kp V   &kp B            &kp N      &kp M      &kp COMMA     &kp DOT  &lt 6 SLASH    &kp RCTRL
                                &kp LEFT_GUI  &mo 1   &kp BACKSPACE    &kp SPACE  &lt 2 RET  &lt 3 DELETE
            >;
        };

        mouse {
            display-name = "Mouse";
            bindings = <
&trans      &trans        &trans        &trans        &trans     &trans    &trans        &trans          &kp LC(UP_ARROW)  &trans         &trans         &trans
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &trans     &trans    &trans        &studio_unlock  &kp UP_ARROW      &trans         &trans         &trans
&trans      &trans        &mkp RCLK     &mkp MCLK     &mkp LCLK  &trans    &kp LC(LEFT)  &kp LEFT        &kp DOWN          &kp RIGHT      &kp LC(RIGHT)  &trans
&trans      &trans        &kp LG(X)     &kp LG(C)     &kp LG(V)  &trans    &trans        &kp HOME        &kp END           &kp PAGE_DOWN  &kp PAGE_UP    &trans
                                        &trans        &trans     &trans    &trans        &trans          &trans
            >;
        };

        num {
            display-name = "Numbers";
            bindings = <
&trans  &trans        &trans  &trans  &trans              &trans       &trans         &trans                 &trans                  &trans           &trans          &trans
&trans  &kp ASTERISK  &kp N7  &kp N8  &kp N9              &kp SLASH    &kp BACKSLASH  &kp LEFT_PARENTHESIS   &kp RIGHT_PARENTHESIS   &kp PIPE         &trans          &trans
&trans  &kp MINUS     &kp N4  &kp N5  &hml LEFT_SHIFT N6  &kp PLUS     &kp PERCENT    &hmr RSHFT LEFT_BRACE  &hmr RCTRL RIGHT_BRACE  &hmr RALT COLON  &hmr RGUI SEMI  &none
&trans  &kp GRAVE     &kp N1  &kp N2  &kp N3              &kp EQUAL    &trans         &kp LEFT_BRACKET       &kp RIGHT_BRACKET       &trans           &trans          &trans
                              &trans  &kp N0              &trans       &trans         &trans                 &trans
            >;
        };

        func {
            display-name = "Function";
            bindings = <
&trans  &trans  &trans  &trans   &trans   &trans     &trans  &trans     &trans     &trans    &trans    &trans
&kp F7  &kp F8  &kp F9  &kp F10  &kp F11  &kp F12    &trans  &trans     &trans     &trans    &trans    &trans
&kp F1  &kp F2  &kp F3  &kp F4   &kp F5   &kp F6     &trans  &kp RSHFT  &kp RCTRL  &kp RALT  &kp RGUI  &trans
&trans  &trans  &trans  &trans   &trans   &trans     &trans  &trans     &trans     &trans    &trans    &trans
                        &trans   &trans   &trans     &trans  &trans     &trans
            >;
        };

        nav {
            bindings = <
&trans  &trans        &trans        &trans     &trans          &trans         &trans  &trans    &trans    &trans         &trans       &trans
&trans  &trans        &trans        &trans     &trans          &trans         &trans  &trans    &trans    &trans         &trans       &trans
&trans  &kp LEFT_GUI  &kp LEFT_ALT  &kp LCTRL  &kp LEFT_SHIFT  &trans         &trans  &kp LEFT  &kp DOWN  &kp UP         &kp RIGHT    &trans
&trans  &trans        &trans        &trans     &kp RS(K_COPY)  &kp K_PASTE    &trans  &kp HOME  &kp END   &kp PAGE_DOWN  &kp PAGE_UP  &trans
                                    &trans     &trans          &trans         &trans  &trans    &trans
            >;

            label = "Navi";
        };

        prog {
            bindings = <
&none  &none  &none  &none  &none  &bootloader    &bootloader  &none         &none         &none         &none         &none
&none  &none  &none  &none  &none  &none          &none        &bt_profile1  &bt_profile2  &bt_profile3  &none         &none
&none  &none  &none  &none  &none  &sys_reset     &sys_reset   &none         &none         &none         &none         &none
&none  &none  &none  &none  &none  &none          &none        &none         &none         &none         &out OUT_TOG  &bt BT_CLR
                     &none  &none  &none          &none        &none         &none
            >;

            label = "Brogram";
        };

        media {
            bindings = <
&none  &none       &none              &none             &none            &none         &none  &none  &none  &none  &none  &none
&none  &none       &none              &none             &none            &none         &none  &none  &none  &none  &none  &none
&none  &kp C_PREV  &kp C_VOLUME_DOWN  &kp C_PLAY_PAUSE  &kp C_VOLUME_UP  &kp C_NEXT    &none  &none  &none  &none  &none  &none
&none  &none       &none              &none             &none            &none         &none  &none  &none  &none  &none  &none
                                      &none             &none            &none         &none  &none  &none
            >;

            label = "Media";
        };
    };
};
